@model List<EF_CodeFirst.Models.Entities.Category>

@{
    ViewData["Title"] = "Category";
}

<h1>Kitap Türleri</h1>
<a asp-action="Create">Yeni Kategori</a>
<table class="table table-dark w-50">
    <thead>
        <tr>
            <th>Kategori ID</th>
            <th>Kategori Adı</th>
            <th>Kategori Açıklaması</th>
     
            
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr style="border:2px">
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>@category.CategoryDescription</td>
               
              
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@category.CategoryId">Detaylar</a>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@category.CategoryId">Düzenle</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@category.CategoryId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>