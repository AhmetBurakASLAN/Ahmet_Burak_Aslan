@model  EF_Core_MVC_Code.Models.Yayinevleri
@{
    ViewData["Title"] = "Create";
}

<h1 class="display-3">Yeni Kitap Türü</h1>

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="Create">
            <div class="form-group">
                <label  class="control-label">Kitap Türü</label>
                <input type="text" asp-for="Ad" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success">
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index">Yayinevleri listesine Geri Dön</a>
    </div>

</div>