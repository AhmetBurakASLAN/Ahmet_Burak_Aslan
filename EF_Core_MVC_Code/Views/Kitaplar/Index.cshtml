@model List<EF_Core_MVC_Code.Models.Kitaplar>

@{
    ViewData["Title"] = "Kitaplar";
}

<h1>Kitap Türleri</h1>
<a asp-action="Create">Yeni Kitap </a>
<table class="table table-dark w-50">
    <thead>
        <tr>
              <th>Kitap ISBN: </th>
                <th>Kitap Adı: </th>
                <th>Kitap Sayfa Sayısı: </th>
                <th>Kitap Stok: </th>
                <th>Kitap Türü: </th>
                <th>Kitap Yazar: </th>
                <th>Kitap Yayinevi: </th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kitaplar in Model)
        {
            <tr>
                                       
                 <td>@kitaplar.Isbn</td>
                  <td>@kitaplar.Ad</td>
                  <td>@kitaplar.SayfaSayisi</td>
                  <td>@kitaplar.Stok</td>
                  <td>@kitaplar.TurId</td>
                  <td>@kitaplar.YazarId</td>
                  <td>@kitaplar.YayinEvi</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@kitaplar.Isbn">Detaylar</a>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@kitaplar.Isbn">Düzenle</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@kitaplar.Isbn">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>